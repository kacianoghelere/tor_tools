<% provide(:title, "Acessar") %>
<% provide(:label, "Acessar sistema") %>

<div class="row-fluid">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:session, url: login_path, class: 'form-horizontal') do |f| %>

			<div class="form-group">
				<%= f.label :email, "E-mail" %>
				<%= f.email_field :email, class: 'form-control input-sm' %>
			</div>

			<div class="form-group">
				<%= f.label :password, "Senha" %>
				<%= f.password_field :password, class: 'form-control input-sm' %>
			</div>

			<div class="form-group">
				<%= button_tag "Acessar", type: :submit, class: "btn btn-default" %>
			</div>
			<div class="form-group">
				<p>
					NÃ£o possui uma conta? <%= link_to "Crie uma agora!", signup_path %>
				</p>
			</div>
		<% end %>
	</div>
</div>