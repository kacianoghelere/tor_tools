<%= form_for(@weapon_category, class: 'form-horizontal') do |f| %>
	<div class="col-md-6">
		<div class="form-group">
			<%= f.label :name, "Nome" %>
			<%= f.text_field :name, class: 'form-control input-sm' %>
		</div>
	</div>

	<div class="col-md-6">
		<div class="form-group">
			<%= f.label :effect, "Ataque Direcionado" %>
			<%= f.text_field :effect, class: 'form-control input-sm' %>
		</div>
	</div>

	<div class="col-md-12">
		<div class="form-group">
			<%= button_tag yield(:button_text),	type: :submit, 
																					class: "btn btn-default btn-sm" %>
		</div>
	</div>
<% end %>