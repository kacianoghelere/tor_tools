<%= form_for(@party, class: 'form-horizontal') do |f| %>
	<div class="col-md-6">
		<div class="form-group">
			<%= f.label :title, "Titulo" %>
			<%= f.text_field :title, class: 'form-control input-sm' %>
		</div>
	</div>

	<div class="col-md-12">
		<div class="form-group">
			<%= button_tag yield(:button_text),	type: :submit, 
																					class: "btn btn-default btn-sm" %>
		</div>
	</div>
<% end %>