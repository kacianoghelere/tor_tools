<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h5>
				<b>
					<%= link_to party do %>
						<span class="badge"><%= party.id %></span> <%= party.title %>
					<% end %>
				</b>
			</h5>
		</div>

		<ul class="list-group">
			<li class="list-group-item">
				<b>Membros </b>
				<span class="badge"><%= party.members.sum(:amount) %></span>
			</li>
			<li class="list-group-item">
				<b>Tipos de NPC </b>
				<span class="badge"><%= party.members.count(:npc_id) %></span>
			</li>
		</ul>

		<div class="panel-footer">
			<%= link_to party, title: "Visualizar", 
								class: "btn btn-default btn-xs" do %>
				<span class="glyphicon glyphicon-new-window"></span> Visualizar
			<% end %>
			<% if current_user?(party.user) || admin? %>
				<div class="pull-right">
					<%= link_to edit_party_path(party), title: "Editar", 
										class: "btn btn-primary btn-xs" do %>
						<span class="glyphicon glyphicon-edit"></span>
					<% end %>
					<%= link_to(party, method: :delete, title: "Remover", 
										class: "btn btn-danger btn-xs", 
										data: { confirm: "Deseja remover?" }) do %>
						<span class="glyphicon glyphicon-remove"></span>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>