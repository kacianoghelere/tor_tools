<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h5>
				<b>
					<%= link_to party do %>
						<span class="badge"><%= party.id %></span> <%= party.title %>
					<% end %>
				</b>
			</h5>
		</div>

		<div class="table-responsive">
			<table class="table table-bordered table-condensed">
				<tbody>
					<% party.party_npcs.each do |party_npc| %>
						<tr>
							<td width="80%" align="center">
								<%= link_to party_npc.npc.name, party_npc.npc %>
							</td>
							<td width="20%" align="center">
								<span class="badge"><%= party_npc.amount %></span>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>

		<div class="panel-footer">
			<%= link_to edit_party_path(party), title: "Editar", 
								class: "btn btn-primary btn-xs" do %>
				<span class="glyphicon glyphicon-edit"></span> Editar
			<% end %>
			<%= link_to(party, method: :delete, title: "Remover", 
								class: "btn btn-danger btn-xs", 
								data: { confirm: "Deseja remover?" }) do %>
				<span class="glyphicon glyphicon-remove"></span> Remover
			<% end %>
		</div>
	</div>
</div>