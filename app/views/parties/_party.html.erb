<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h5>
				<b>
					<%= link_to party do %>
						<span class="badge"><%= party.id %></span> <%= party.title %>
					<% end %>
				</b>
			</h5>
		</div>

		<ul class="list-group">
			<%= render party.party_npcs %>
		</ul>

		<div class="panel-footer">
			<%= link_to party, title: "Visualizar", 
								class: "btn btn-info btn-xs" do %>
				<span class="glyphicon glyphicon-new-window"></span> Visualizar
			<% end %>
			<% if party.user == current_user %>
				<%= link_to edit_party_path(party), title: "Editar", 
									class: "btn btn-primary btn-xs" do %>
					<span class="glyphicon glyphicon-edit"></span> Editar
				<% end %>
				<%= link_to(party, method: :delete, title: "Remover", 
									class: "btn btn-danger btn-xs", 
									data: { confirm: "Deseja remover?" }) do %>
					<span class="glyphicon glyphicon-remove"></span> Remover
				<% end %>
			<% end %>
		</div>
	</div>
</div>