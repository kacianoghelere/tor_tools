<div class="row-fluid">
	<div class="table-responsive">
		<table id="iniciativa" class="table table-condensed">
			<thead>
				<tr>
					<th width="4%">
						<button name="adicionar" class="btn btn-success btn-sm btn-block">
							<span class="glyphicon glyphicon-plus"></span>
						</button>
					</th>
					<th width="20%">Nome do Inimigo</th>
					<th width="7%" >Atributo</th>
					<th width="10%" >Resit. Inicial</th>
					<th width="7%" >Resitência</th>
					<th width="7%" >Recurso</th>
					<th width="7%" >Aparar</th>
					<th width="7%" >Armadura</th>
					<th width="10%">Posição</th>
					<th width="7%" >Iniciativa</th>
					<th width="7%" >NA Total</th>
				</tr>
			</thead>
			<tbody>
				<tr class="item-iniciativa">
					<td>
						<button name="remover" id="remover" class="btn btn-danger btn-sm btn-block">
							<span class="glyphicon glyphicon-remove"></span>
						</button>
					</td>
					<td>
						<input type="text"   name="nome" id="nome" class="form-control input-sm" maxlength="30" />
					</td>
					<td>
						<input type="numero" name="ind_atributo" id="ind_atributo" class="form-control input-sm" value="0" maxlength="2" readonly/>
					</td>
					<td>
						<input type="numero" name="resist_ini" id="resist_ini" class="form-control input-sm" value="0" maxlength="3" readonly/>
					</td>
					<td>
						<input type="numero" name="resist" id="resist" class="form-control input-sm" value="0" maxlength="3" />
					</td>
					<td>
						<input type="numero" name="recurso" id="recurso" class="form-control input-sm" value="0" maxlength="2" />
					</td>
					<td>
						<input type="numero" name="aparar" id="aparar" class="form-control input-sm calc" value="0" maxlength="2" />
					</td>
					<td>
						<input type="armadura" name="armadura" id="escudo" class="form-control input-sm calc" value="0" maxlength="1" readonly />
					</td>
					<td>
						<select name="posicao" id="posicao" class="form-control input-sm calc">
							<option value="1">Vanguarda</option>
							<option value="2">Aberta</option>
							<option value="3">Defensiva</option>
							<option value="4">Retaguarda</option>
						</select>
					</td>
					<td>
						<input type="numero" name="iniciativa" id="iniciativa" class="form-control input-sm" value="0" disabled="disabled" />
					</td>
					<td>
						<input type="numero" name="total"      id="total"      class="form-control input-sm" value="0" disabled="disabled" />
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<th colspan="11">
						<button type="button" name="replicar" class="btn btn-default btn-sm">
							<span class="glyphicon glyphicon-duplicate"></span> Replicar
						</button>
						<button type="button" name="gerar" class="btn btn-default btn-sm">
							<span class="glyphicon glyphicon-cog"></span> Gerar Iniciativa
						</button>
					</th>
				</tr>
			</tfoot>
		</table>
	</div>
</div>