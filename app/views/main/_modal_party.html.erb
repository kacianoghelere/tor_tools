<div id="modal-party" class="modal fade" tabindex="-1" role="dialog" 
		aria-labelledby="modal-label">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" 
					aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="modal-label">Grupos</h4>
			</div>
			
			<div class="modal-body">
				<ul class="list-group list-group-scrolled-300">
					<% @parties.each do |party| %>
						<li class="list-group-item">
							<div class="pull-right">
								<%= button_tag 'Adicionar', name: 'add_party', 
																			data: { code: party.id },
																			class: 'btn btn-default btn-sm' %>
							</div>
							<h4><b><%= "#{party.id} - #{party.title}" %></b></h4>
							<ul class="list-inline">
								<% party.members.each do |member| %>
									<li>
										<%= content_tag :p, class: "label label-default" do %>
											<%= "#{member.npc.name} x #{member.amount}" %>
										<% end %>
									</li>
								<% end %>
							</ul>
						</li>
					<% end %>
				</ul>
			</div>

			<div class="modal-footer">
				<button type="button" class="btn btn-danger btn-sm" 
						data-dismiss="modal">
					<%= link_icon 'ban-cicle' %> Cancelar
				</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->