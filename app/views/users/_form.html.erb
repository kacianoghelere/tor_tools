<%= form_for(@user, class: 'form-horizontal') do |f| %>
	<%= render partial: 'shared/error_messages', locals: {object: @user} %>

	<div class="form-group">
		<%= f.label :name, "Nome" %>
		<%= f.text_field :name, class: 'form-control input-sm' %>
	</div>

	<div class="form-group">
		<%= f.label :email, "E-mail" %>
		<%= f.email_field :email, class: 'form-control input-sm' %>
	</div>

	<div class="form-group">
		<%= f.label :password, "Senha" %>
		<%= f.password_field :password, class: 'form-control input-sm' %>
	</div>

	<div class="form-group">
		<%= f.label :password_confirmation, "Confirmação" %>
		<%= f.password_field :password_confirmation, 
													class: 'form-control input-sm' %>
	</div>

	<div class="form-group">
		<%= button_tag yield(:button_text),	type: :submit, 
																				class: "btn btn-default" %>
	</div>
<% end %>