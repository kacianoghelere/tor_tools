<% provide(:title, @user.name) %>
<% provide(:label, "Dados do usuário") %>

<div class="row">
	<aside class="col-md-12">
		<center>
			<%= gravatar_for @user, classes: "img-circle" %>
			<h2>
				<%= @user.name %> 
			</h2>
			<% if current_user === @user %>
				<%= link_to (edit_user_path(current_user)) do %>
					Editar <span class="glyphicon glyphicon-edit"></span>
				<% end %>
			<% end %>
		</center>
	</aside>
</div>

<% if current_user === @user %>
	<div class="row">
		<aside class="col-md-12">
				<legend>Minhas criações</legend>			
		</aside>
		<aside class="col-md-12">
			<!-- Nav tabs -->
			<ul class="nav nav-tabs nav-justified" role="tablist">
				<%= generate_tab "#npcs",    inner: "NPC's",       
																			count: 0, active: true %>
				<%= generate_tab "#weapons", inner: "Armas",       
																			count: 0 %>
				<%= generate_tab "#skills",  inner: "Habilidades", 
																			count: 0 %>
			</ul>

			<!-- Tab panes -->
			<div class="tab-content">
				<div role="tabpanel" class="tab-pane active" id="npcs">
					<div class="panel panel-default">
						<div class="panel-body">NPC's</div>
					</div>
				</div>
				<div role="tabpanel" class="tab-pane" id="weapons">
					<div class="panel panel-default">
						<div class="panel-body">Armas</div>
					</div>
				</div>
				<div role="tabpanel" class="tab-pane" id="skills">
					<div class="panel panel-default">
						<div class="panel-body">Habilidades</div>
					</div>
				</div>
			</div>
		</aside>
	</div>
<% end %>