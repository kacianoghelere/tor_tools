<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h5>
				<b>
					<%= link_to weapon do %>
						<span class="badge"><%= weapon.id %></span> <%= weapon.name %> 
					<% end %>
				</b>
			</h5>
		</div>

		<div class="table-responsive">
			<table class="table table-condensed">
				<thead>
					<tr>
						<th>Dano</th>
						<th>Gume</th>
						<th>Trauma</th>
						<th>Ataque direcionado</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= weapon.damage %></td>
						<td><%= weapon.edge %></td>
						<td><%= weapon.injury %></td>
						<td><%= weapon.enc %></td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="panel-footer">
			<%= link_to weapon, title: "Visualizar", 
								class: "btn btn-info btn-xs" do %>
				<span class="glyphicon glyphicon-new-window"></span> Visualizar
			<% end %>
			<% if weapon.user == current_user %>
				<%= link_to edit_weapon_path(weapon), title: "Editar", 
									class: "btn btn-primary btn-xs" do %>
					<span class="glyphicon glyphicon-edit"></span> Editar
				<% end %>
				<%= link_to(weapon, method: :delete, title: "Remover", 
									class: "btn btn-danger btn-xs", 
									data: { confirm: "Deseja remover?" }) do %>
					<span class="glyphicon glyphicon-remove"></span> Remover
				<% end %>
			<% end %>
		</div>
	</div>
</div>