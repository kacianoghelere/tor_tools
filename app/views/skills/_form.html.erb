<%= form_for(@skill, class: 'form-horizontal') do |f| %>
	<div class="col-md-8">
		<div class="form-group">
			<%= f.label :name, "Nome" %>
			<%= f.text_field :name, class: 'form-control input-sm' %>
		</div>
	</div>
	<div class="col-md-4">
		<div class="form-group">
			<%= f.label :cost, "Custo" %>
			<%= f.number_field :cost, in: 0..1, step: 1, 
															class: 'form-control input-sm' %>
		</div>
	</div>

	<div class="col-md-12">
		<div class="form-group">
			<%= f.label :description, "Descrição:" %>
			<%= f.text_area :description, size: "60x12", 
																		class: 'form-control input-sm' %>
		</div>
	</div>

	<div class="col-md-12">
		<div class="form-group">
			<%= button_tag yield(:button_text),	type: :submit, 
																					class: "btn btn-default btn-sm" %>
		</div>
	</div>
<% end %>