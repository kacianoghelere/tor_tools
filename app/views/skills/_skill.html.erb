<% desc = skill.description %>
<% description = desc.length > 60 ? "#{desc.slice(0, 60)}..." : desc %>
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h5>
				<b>
					<%= link_to skill do %>
						<span class="badge"><%= skill.id %></span> <%= skill.name %> 
					<% end %>
				</b>
			</h5>
		</div>

		<div class="panel-body">
				<%= description %>
		</div>

		<div class="panel-footer">
			<%= link_to skill, title: "Visualizar", 
								class: "btn btn-default btn-xs" do %>
				<span class="glyphicon glyphicon-new-window"></span> Visualizar
			<% end %>
			<div class="pull-right">
				<% if skill.user == current_user %>
					<%= link_to edit_skill_path(skill), title: "Editar", 
										class: "btn btn-primary btn-xs" do %>
						<span class="glyphicon glyphicon-edit"></span> Editar
					<% end %>
					<%= link_to(skill, method: :delete, title: "Remover", 
										class: "btn btn-danger btn-xs", 
										data: { confirm: "Deseja remover?" }) do %>
						<span class="glyphicon glyphicon-remove"></span> Remover
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>